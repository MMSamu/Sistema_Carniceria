<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.uam.ayd.proyecto.presentacion.editarCarrito.VentanaCarrito">
    <headerText>Editar carrito</headerText>
    <content>
        <VBox spacing="12">
            <Label text="Contenido del carrito (placeholder)"/>
            <HBox spacing="10">
                <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"/>
                <Button fx:id="btnReducir"  text="Reducir"  onAction="#onReducir"/>
                <Button fx:id="btnAumentar" text="Aumentar" onAction="#onAumentar"/>
            </HBox>
        </VBox>
    </content>
    <padding><Insets topRightBottomLeft="16"/></padding>
</DialogPane>